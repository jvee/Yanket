.b-questions
	font-size: 16px
	margin-top: (50/16)em
	margin-bottom: (100/16)em
	width 600px
	margin-left 360px

	
	&__header
		line-height 1.4
		font-size (14/16)em

	h1
		font-size (36/14)em
		font-weight normal
		line-height 1.3
		margin-bottom: .5em
		border-left (10em/36) solid #428bca
		padding-left: (36em/36)

	p
		margin-bottom .8em

	&__footer
		padding-top (30em/16)
		padding-left (30em/16)

	&__button
		display inline-block
		padding (6em/14) (12em/14)
		margin-bottom 0
		font-size (18/16)em
		font-weight normal
		line-height 1.333
		text-align center
		white-space nowrap
		vertical-align middle
		cursor pointer
		border 1px solid transparent
		border-radius (4/14)em
		color #ffffff
		background-color #428bca
		border-color #357ebd

		&:hover
			color #ffffff
			background-color #3276b1
			border-color #285e8e